<% back_left = false if local_assigns[:back_left].nil? %>

<header class="bar bar-nav">
  <% if back_left %>
  <a class="icon icon-left-nav pull-left" href="
    <% case section %>
    <% when 'activities' %>
      <%= activities_path %>
    <% when 'shops' %>
      <%= shops_path %>
    <% end %>
    " data-transition="slide-out"></a>
  <% end %>
  <h1 class="title">乐在嘉实</h1>
</header>