<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>References</th>
      <th>Title</th>
      <th>Price</th>
      <th>Summary</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.references %></td>
        <td><%= item.title %></td>
        <td><%= item.price %></td>
        <td><%= item.summary %></td>
        <td><%= item.detail %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
