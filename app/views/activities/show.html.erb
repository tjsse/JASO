<%= render :partial => 'common/header', :locals => { :back_left => true, :section => 'activities' } %>

<div class="content">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @activity.title %>
  </p>

  <p>
    <%= image_tag @activity.feature_image.url(:middle) %>
  </p>

  <p>
    <%= @activity.detail %>
  </p>

  <%= link_to 'Edit', edit_activity_path(@activity) %> |
  <%= link_to 'Back', activities_path %>
</div>