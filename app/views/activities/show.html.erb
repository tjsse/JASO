<%= render :partial => 'common/header', :locals => { :back_left => true, :section => 'activities' } %>

<div class="content common-show pt10 plr10">
  <header class="mt10 mb10">
    <h1 class="common-heading">
      <%= @activity.title %>
    </h1> 
    <div>
      <span>
        <%= fa_icon 'building' %>
        <%= link_to @activity.shop.name, shop_path(@activity.shop) %>
      </span>
    </div>
  </header>

  <div class="feature-img-wrap">
    <%= image_tag @activity.feature_image.url(:middle), :class => 'feature-img' %>
  </div>

  <p>
    <%= @activity.detail %>
  </p>
</div>